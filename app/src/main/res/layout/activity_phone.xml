<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/phone_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入号码" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/business_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30dp" />

        <TextView
            android:id="@+id/query_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_num1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ccc"
                android:text="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_num2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ccc"
                android:text="2"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_num3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ccc"
                android:text="3"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_numdel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ccc"
                android:text="DEL"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_num4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ccc"
                android:text="4"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_num5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ccc"
                android:gravity="center"
                android:text="5"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_num6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ccc"
                android:text="6"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_num0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ccc"
                android:text="0"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_num7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ccc"
                android:text="7"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_num8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ccc"
                android:text="8"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_num9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ccc"
                android:text="9"
                android:textSize="20sp" />

            <Button
                android:id="@+id/phone_query_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ccc"
                android:text="查询"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>